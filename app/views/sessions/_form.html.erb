<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <%= form_with scope: :session, url: login_path, method: :post, class: 'shadow p-3 mb-3 mt-3 bg-light rounded' do |f| %>
        <div class='mb-3 row'>
          <%= f.label :email, class: 'col-2 col-form-label' %> <br>
          
          <div class='col-sm-10'>
            <%= f.email_field :email, class: 'form-control shadow rounded', 
              placeholder: 'Enter your email address' %>
          </div>
        </div>

        <div class='mb-3 row'>
          <%= f.label :password, class: 'col-2 col-form-label' %> <br>
          
          <div class='col-sm-10'>
            <%= f.password_field :password, class: 'form-control shadow rounded',
              placeholder: 'Enter your password' %>
          </div>
        </div>

        <div class='mb-3 text-center'>
          <%= f.submit 'Log in', class: 'btn btn-outline-success btn-lg' %>
        </div>
      <% end %>
    </div>
  
    <%= link_to '[ Cancel and return to article listing ]', articles_path, 
      class: 'text-center text-dark mb-3' %>
  </div>
</div>
